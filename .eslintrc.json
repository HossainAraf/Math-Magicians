{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2021, // Update to the appropriate ECMAScript version
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "import/extensions": ["error", {
      "js": "always",
      "json": "always"
    }]
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}
